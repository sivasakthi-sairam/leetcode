class Solution {
    public int findChampion(int n, int[][] edges) {
        int[] inDegree = new int[n];
        for (int[] edge : edges) {
            inDegree[edge[1]]++;
        }
        int champion = -1;
        for (int i = 0;i < n;i++) {
            if (inDegree[i] == 0) {
                if (champion < 0) {
                    champion = i;
                } else {
                    champion = -1;
                    break;
                }
            }
        }
        return champion;
    }
}