class Solution {
    public int[] twoSum(int[] nums, int target) {
        int[] soln = new int[2];
        int i, j;
        boolean found = false;
        for(i = 0;i < nums.length;i++) {
            for(j = i+1;j < nums.length;j++) {
                if(nums[i] + nums[j] == target) {
                    soln[0] = i;
                    soln[1] = j;
                    found = true;
                    break;
                }
            }
            if(found) {
                break;
            }
        }
        return soln;
    }
}